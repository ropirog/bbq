<h1><%= t ".title" %></h1>
<div>
  <%= link_to image_tag(@photo.photo.variant(:common)), url_for(@photo.photo) %>
</div>
<p><%= t ".author" %>: <strong><%= @photo.user.name %></strong></p>

<hr/>

<%= t ".event" %>
<h3><%= @event.title %></h3>

<%= t ".link" %>
<h3><%= link_to @event.title, url_for(@event), class: "text-decoration-none" %></h3>

<%= t ".datetime" %>
<h4><%= l @event.datetime %></h4>

<%= t ".owner" %>
<h4><%= @event.user.name %></h4>

<div class="text-center">
  <h1><%= @user.name %></h1>
  <%= image_tag user_avatar(@user) %>

  <% if @user == current_user %>
    <p class="buffer-top">
      <%= link_to t("views.edit_profile"), edit_user_path(@user), class: "btn btn-secondary" %>
    </p>
  <% end %>
</div>

<div class="row">
  <div class="col-md-12">
    <% if @user.events.any? %>
      <h3 class="pb-3 text-center"><%= t("views.organized") %>:</h3>
      <div class="row ps-4 pe-4">
        <%= render partial: "events/event", collection: @user.events %>
      </div>
    <% else %>
      <p class="mt-3 text-center"><%= t("views.not_organized") %></p>
    <% end %>
  </div>
</div>

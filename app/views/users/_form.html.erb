<%= form_with model: user, html: { multipart: true } do |form| %>

  <%= render partial: "partials/form_errors", locals: { model: user } %>

  <div class="form-group mb-2">
    <%= form.label :name %>
    <%= form.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group mb-3">
    <%= form.label :email %>
    <%= form.text_field :email, class: "form-control" %>
  </div>

  <div class="actions">
    <%= form.submit t("views.save"), class: "btn btn-primary" %> или <%= link_to t("views.back"), :back %>
  </div>
<% end %>

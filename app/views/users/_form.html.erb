<%= form_with model: user, html: { multipart: true } do |form| %>
  <%= render partial: "partials/form_errors", locals: { model: user } %>

  <div class="ms-4 me-4 mb-2 col-4">
    <%= form.label :name %>
    <%= form.text_field :name, class: "form-control" %>
  </div>

  <div class="ms-4 me-4 mb-3 col-4">
    <%= form.label :email %>
    <%= form.text_field :email, class: "form-control" %>
  </div>

  <div class="ms-4 me-4">
    <%= form.submit t("views.save"), class: "btn btn-primary" %> или <%= link_to t("views.back"), :back %>
  </div>
<% end %>

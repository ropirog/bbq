<h2 class="pb-2 ms-4 me-4"><%= t("views.forgot_password") %></h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="pb-3 ms-4 me-4">
    <%= f.email_field :email, placeholder: "Email", class: "rounded-1" %>
    <i class="bi bi-envelope-fill"></i>
  </div>

  <div class="pb-3 ms-4 me-4">
    <%= f.submit t("views.send_recovery_email"), class: "btn btn-primary", data: { turbo: false } %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

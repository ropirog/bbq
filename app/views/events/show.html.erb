<div class="event">
  <div class="event-info row ms-4 me-4 rounded-4">
    <div class="col-md-12">
      <%= content_tag "div", "", class: "event-background",
                      style: "background-image: url(#{asset_path('event.jpg')})" %>

      <div class="event-info-inner row">
        <div class="col-md-6">
          <div class="event-description ms-3 me-3">
            <h1><%= @event.title %></h1>
            <h3><%= l @event.datetime, format: :long %></h3>
            <h3><small><%= link_to @event.address,
                                   "https://yandex.ru/maps/?text=#{@event.address}" %></small></h3>
            <p><%= @event.description %></p>
          </div>

          <% if current_user_can_edit?(@event) %>
              <div class="btn-group buffer-top ms-3 me-3 mb-3">
                <%= link_to "Изменить", edit_event_path(@event), class: "btn btn-primary me-3 rounded-2" %>
                <%= button_to "Удалить", event_path(@event),
                              form: { data: { turbo_confirm: t("views.are_you_sure_event") } },
                              method: :delete, class: "btn btn-danger" %>
              </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<%= form_with model: event do |f| %>
  <%= render partial: "devise/shared/error_messages", locals: { resource: event } %>

  <div class="mb-2 ms-4 me-4 col-4">
    <%= f.label :title %>
    <%= f.text_field :title, class: "form-control" %>
  </div>

  <div class="mb-2 ms-4 me-4 col-4">
    <%= f.label :address %>
    <%= f.text_field :address, class: "form-control" %>
  </div>

  <div class="mb-2 ms-4 me-4 col-4">
    <%= f.label :datetime %>
    <p><%= f.datetime_select :datetime, class: "form-control" %></p>
  </div>

  <div class="mb-3 ms-4 me-4 col-4">
    <%= f.label :description %>
    <%= f.text_area :description, class: "form-control" %>
  </div>

  <div class="ms-4 me-4">
    <%= f.submit t("views.save"), class: "btn btn-primary" %>
    <%= t("views.or") %> <%= link_to t("views.back"), :back %>
  </div>
<% end %>

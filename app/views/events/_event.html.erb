<div class="col-sm-6 col-lg-3 mb-3">
  <div class="thumbnail">

    <%= content_tag "div", "", class: "event-background",
                    style: "background-image: url(#{event_photo(event)})" %>

    <div class="thumbnail-inner event-info-inner">
      <div class="caption">
        <div class="col-12 event-description ms-3 me-3">
          <h3><%= link_to event.title, event_path(event), class: "text-decoration-none" %></h3>
          <h3><small><%= l event.datetime, format: :short %></small></h3>
          <div class="buffer-both"><%= event.address %></div>
        </div>
        <% event.visitors.each do |user| %>
          <%= image_tag user_avatar_thumb(user), class: "img-icon mb-2", title: user.name %>
        <% end %>
      </div>
    </div>
  </div>
</div>

<!DOCTYPE html>
<html>
  <head>
    <title>Bbq</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_include_tag "application", "data-turbo-track": "reload", defer: true %>
  </head>

  <body>
    <ul class="nav">
      <li class="nav-item">
        <%= link_to "BBQ", root_path, class: "nav-link" %>
      </li>
      <% if user_signed_in? %>
        <li class="nav-item">
          <%= link_to "Профиль", current_user, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "Выйти", destroy_user_session_path, data: { turbo_method: :delete }, class: "nav-link" %>
        </li>
      <% else %>
        <li class="nav-item">
          <%= link_to "Войти", new_user_session_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "Зарегистрироваться", new_user_registration_path, class: "nav-link" %>
        </li>
      <% end %>
    </ul>

    <%= yield %>
  </body>
</html>

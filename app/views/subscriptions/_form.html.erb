<%= form_for [@event, subscription] do |f| %>
  <%= render partial: "devise/shared/error_messages", locals: { resource: subscription } %>

  <% unless user_signed_in? %>
    <div class="mb-2 me-4">
      <%= f.label :user_name %>
      <%= f.text_field :user_name, class: "form-control" %>
    </div>

    <div class="mb-3 me-4">
      <%= f.label :user_email %>
      <%= f.text_field :user_email, class: "form-control" %>
    </div>
  <% end %>

  <div>
    <%= f.submit t("views.subscribe"), class: "btn btn-primary", data: { turbo: false } %>
  </div>
<% end %>
